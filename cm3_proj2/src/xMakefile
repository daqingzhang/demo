include ../Makefile.common

INC := $(INCLUDE)

CFLAGS += $(INC)
CFLAGS += -c

OBJS += startup.o
OBJS += main.o

SRCS := $(OBJS:.o=.c)

all: $(ALIB)

$(ALIB): $(OBJS)
	$(AR) cr $(ALIB) $^

$(OBJS): $(SRCS)
	@echo "Building $@ ..."
	$(CC) $(CFLAGS) $^

.PHONY: show clean

show:
	@echo "INC is $(INC)"
	@echo "SRCS is $(SRCS)"
clean:
	rm -f $(ALIB)
	rm -f $(OBJS)
